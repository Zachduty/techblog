{{#each posts as |post|}}
<div class="card row align-center mb-5 my-5">
  <div class="card-header col-md-12 text-center">
    <a href="/api/post/{{post.id}}"><h2>{{post.title}}</h2></a>
  </div>
    <blockquote class="blockquote mb-0">
      <footer class="blockquote-footer">{{ format_date post.date_created }}, {{ post.time_created }}    By: {{post.user}}</cite></footer>
    </blockquote>
</div>
{{/each}}