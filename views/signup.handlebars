<body>
   <div class="container">
      <div class="col-md-6 mx-auto text-center">
         <div class="header-title">
            <h1 class="wv-heading--title">
               Sign Up
            </h1>
         </div>
      </div>
      <div class="row">
         <div class="col-md-4 mx-auto">
            <div class="myform form ">
               <form action="" method="post" name="login">
                  <div class="form-group text-center">
                     <input type="text" name="name"  class="form-control my-input" id="user-signup" placeholder="Username">
                  </div>
                  <div class="form-group">
                     <input type="email" name="email"  class="form-control my-input" id="email-signup" placeholder="Email">
                  </div>
                  <div class="form-group">
                     <input type="password" min="0" name="password" id="password-signup"  class="form-control my-input" placeholder="Password">
                  </div>
                  <div class="form-group">
                     <input type="password" min="0" name="confirm-password" id="passCon-signup"  class="form-control my-input" placeholder="Confirm Password">
                  </div>
                  <div class="text-center ">
                     <button id="signup-submit" type="submit" class=" btn btn-block send-button tx-tfm">Create Account</button>
                  </div>
               </form>
            </div>
         </div>
      </div>
   </div>
</body>