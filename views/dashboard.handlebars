<p> TItle of post</p>
<input id="post-title"></input>
<p> Content of post</p>
<input id="post-content"></input>



<button id="addpost" class="text-center my-1 btn-primary">Add a post!</button>

{{#each posts as |post|}}
<div class="card row align-center mb-5 my-5">
  <div class="card-header col-md-12 text-center">
    <a href="/dashboard/post/{{post.id}}"><h2>{{post.title}}</h2></a>
  </div>
    <blockquote class="blockquote mb-0">
      <footer class="blockquote-footer">{{ format_date post.date_created }}, {{ post.time_created }}    By: {{post.user.name}}</cite></footer>
    </blockquote>
</div>
{{/each}}

<script src='/post.js'></script>